# Innerpeace API production defaults
# Copy to .env and override values as needed for your deployment.

# Server configuration
PORT=8080
CALENDAR_ID=primary
MANAGER_CALENDAR_ID=
MANAGER_EMAIL=thomaspal@innerpeace-developer.co.uk
USE_MEET=auto
SEND_UPDATES=all
BOOK_ORGANIZER_MODE=manager

# Domain-wide delegation fallback (optional)
GOOGLE_DELEGATED_USER=
GOOGLE_CLIENT_EMAIL=
# Keep the literal \n in place when storing the key on a single line.
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Media proxy configuration
DRIVE_MEDIA_FOLDER_ID=
MEDIA_ALLOWED_MIME=video/*,audio/*
MEDIA_CACHE_MAX_AGE=public, max-age=3600

# Authentication
GOOGLE_OAUTH_CLIENT_ID=
APPLE_AUDIENCE_BUNDLE_ID=com.innerpeace.app
SESSION_JWT_SECRET=
